<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stick_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.example.zhihu.testviewdemo.sticknav.MixtapeVideoView
            android:id="@+id/stick_video"
            android:layout_width="match_parent"
            android:layout_height="250dp"></com.example.zhihu.testviewdemo.sticknav.MixtapeVideoView>

        <android.support.design.widget.TabLayout
            android:id="@+id/stick_tab"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:tabIndicatorColor="#00f"
            app:tabSelectedTextColor="#00f" />

        <android.support.v4.view.ViewPager
            android:background="#f00"
            android:id="@+id/stick_vp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v4.view.ViewPager>

    </LinearLayout>


</FrameLayout>